<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-roles-table" author="mboldaev">
        <createTable tableName="roles">
            <column name="id" type="TINYINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="role_name" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="roles"/>
        </rollback>
    </changeSet>

    <changeSet id="create-users-table" author="mboldaev">
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="salary" type="DECIMAL(10, 2)" defaultValue="30000">
                <constraints nullable="false"/>
            </column>
            <column name="bonus" type="DECIMAL(10, 2)" defaultValue="0"/>
            <column name="guests_involve_plan" type="INT" defaultValue="3">
                <constraints nullable="false"/>
            </column>
            <column name="guests_involve_actual" type="INT" defaultValue="0"/>
        </createTable>
        <rollback>
            <dropTable tableName="users"/>
        </rollback>
    </changeSet>

    <changeSet id="create-user_roles-table" author="mboldaev">
        <createTable tableName="user_roles">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_user_id_for_role" references="users(id)"/>
            </column>
            <column name="role_id" type="TINYINT">
                <constraints nullable="false" foreignKeyName="fk_role_id_for_user" references="roles(id)"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="user_roles"/>
        </rollback>
    </changeSet>

    <changeSet id="create-guests-table" author="mboldaev">
        <createTable tableName="guests">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="patronymic" type="VARCHAR(45)"/>
            <column name="visit_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)" defaultValue="mboldaevres@gmail.com"/>
        </createTable>
        <rollback>
            <dropTable tableName="guests"/>
        </rollback>
    </changeSet>

    <changeSet id="create-ski_passes-table" author="mboldaev">
        <createTable tableName="ski_passes">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="pass_validity" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(10, 2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="ski_passes"/>
        </rollback>
    </changeSet>

    <changeSet id="create-coaches-table" author="mboldaev">
        <createTable tableName="coaches">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="patronymic" type="VARCHAR(45)"/>
            <column name="category" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="birth_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="gender" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="photo_url" type="VARCHAR(255)">
            <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="coaches"/>
        </rollback>
    </changeSet>

    <changeSet id="create-guest_ski_pass-table" author="mboldaev">
        <createTable tableName="guest_ski_pass">
            <column name="guest_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" foreignKeyName="fk_guest_id" references="guests(id)"/>
            </column>
            <column name="ski_pass_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" foreignKeyName="fk_ski_pass_id_guest" references="ski_passes(id)"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="guest_ski_pass"/>
        </rollback>
    </changeSet>

    <changeSet id="create-coach_ski_pass-table" author="mboldaev">
        <createTable tableName="coach_ski_pass">
            <column name="coach_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" foreignKeyName="fk_coach_id" references="coaches(id)"/>
            </column>
            <column name="ski_pass_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" foreignKeyName="fk_ski_pass_id_coach" references="ski_passes(id)"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="coach_ski_pass"/>
        </rollback>
    </changeSet>

    <changeSet id="create-guest_coach-table" author="mboldaev">
        <createTable tableName="guest_coach">
            <column name="guest_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" foreignKeyName="fk_guest_id_to_coach" references="guests(id)"/>
            </column>
            <column name="coach_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" foreignKeyName="fk_coach_id_to_guest" references="coaches(id)"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="guest_coach"/>
        </rollback>
    </changeSet>
</databaseChangeLog>